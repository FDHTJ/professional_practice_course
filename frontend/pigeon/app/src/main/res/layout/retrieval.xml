<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/retrieval_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".retrieval.Retrieval"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/retrieval_upload"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        android:background="@drawable/border"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/upload" />
    <FrameLayout
        android:id="@+id/retrieval_loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#80000000"
        android:elevation="15dp"

        android:clickable="true"
        android:focusable="true">
        <ProgressBar
            android:id="@+id/retrieval_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:elevation="20dp"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/purple_500"
            android:visibility="gone"/>

    </FrameLayout>

    <Button
        android:id="@+id/start_retrieval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="256dp"
        android:elevation="10dp"

        android:text="开始检索"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retrieval_upload" />
</androidx.constraintlayout.widget.ConstraintLayout>